@model TranspolarProject.Areas.Customer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Transpolar | Müşteri Kayıt Sayfası</title>
	<!-- plugins:css -->
	<link rel="stylesheet" href="~/majesticadmin/template/vendors/mdi/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="~/majesticadmin/template/vendors/base/vendor.bundle.base.css">
	<!-- endinject -->
	<!-- plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="~/majesticadmin/template/css/style.css">
	<!-- endinject -->
	<link rel="shortcut icon" href="~/majesticadmin/template/images/favicon.png" />
</head>

<body>
	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth px-0">
				<div class="row w-100 mx-0">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light text-left py-5 px-4 px-sm-5">
							<div class="brand-logo">
								<img src="~/majesticadmin/template/images/logo.svg" alt="logo">
							</div>
							<h4>Müşteri Kayıt Paneline Hoşgeldiniz</h4>
							<form class="pt-3" method="post">
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Adınız" asp-for="Name">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Soyadınız" asp-for="Surname">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kullanıcı Adınız" asp-for="Username">
								</div>
								<div class="form-group">
									<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Mail Adresiniz" asp-for="Mail">
								</div>
								<div class="form-group">
									<input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Telefon Numaranız" asp-for="Phone">
								</div>
								<div class="form-group">
									<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifreniz" asp-for="Password">
								</div>
								<div class="form-group">
									<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
								</div>
								<div class="mt-3">
									<button type="submit" class="btn btn-primary">Kayıt Ol</button>
								</div>
								<div class="text-center mt-4 font-weight-light">
									Bir hesabınız var mı? <a href="/Login/SignIn/" class="text-primary">Giriş Yapın</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="~/majesticadmin/template/vendors/base/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- inject:js -->
	<script src="~/majesticadmin/template/js/off-canvas.js"></script>
	<script src="~/majesticadmin/template/js/hoverable-collapse.js"></script>
	<script src="~/majesticadmin/template/js/template.js"></script>
	<!-- endinject -->
</body>

</html>
