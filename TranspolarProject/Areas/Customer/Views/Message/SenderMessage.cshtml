@using EntityLayer.Concrete
@model List<SupportMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Giden Kutusu</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Alıcı</th>
							<th>Konu</th>
							<th>Destek Talebi</th>
							<th>Tarih</th>
							<th>İptal Et</th>
							<th>Mesaj Detayları</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.MessageID</td>
								<td>@item.ReceiverName</td>
								<td>@item.Subject</td>
								<td>@item.MessageContent.Substring(0,25)...</td>
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
								<td><a href="/Customer/Message/DeleteMessage/@item.MessageID" class="btn btn-danger" style="color:white">İptal Et</a></td>
								<td><a href="/Customer/Message/ReceiverMessageDetails/@item.MessageID" class="btn btn-success" style="color:white">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

