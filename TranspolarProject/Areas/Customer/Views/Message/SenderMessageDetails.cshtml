@model EntityLayer.Concrete.SupportMessage

@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Talep Detayları</h4>
			<form method="post" class="forms-sample">
				<input type="hidden" asp-for="MessageID" />
				<div class="form-group">
					<label for="exampleInputUsername1">Gönderici Ad-Soyad</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="SenderName" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Gönderici Mail</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Sender" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Destek Talebi Konusu</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Subject" readonly>
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Açıklama</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="MessageContent" readonly></textarea>
				</div>
			</form>
		</div>
	</div>
</div>

