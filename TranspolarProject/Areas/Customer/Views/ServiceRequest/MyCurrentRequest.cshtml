@using EntityLayer.Concrete
@model List<ServiceRequest>
@{
	ViewData["Title"] = "MyCurrentRequest";
	Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Aktif Hizmet Talepleri</h4>
			<div class="table-responsive">
				@if (Model.Count != 0)
				{
					<table class="table table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Hizmet</th>
								<th>Tarih</th>
								<th>Durum</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.ServiceRequestID</td>
									<td>@item.RequestService</td>
									<td>@item.RequestDate</td>
									<td>@item.Status</td>
								</tr>
							}
						</tbody>
					</table>
				}
				else
				{
					<h2>Aktif Hizmet Talebiniz Bulunmamaktadır</h2>
				}
			</div>
		</div>
	</div>
</div>

