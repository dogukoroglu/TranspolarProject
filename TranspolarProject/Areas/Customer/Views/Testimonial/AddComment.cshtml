@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddComment";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Yorum Ekleme Sayfası</h4>
			<form method="post" class="forms-sample">
				<div class="form-group">
					<label for="exampleTextarea1">Yorum</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Comment"></textarea>
				</div>
				<button type="submit" class="btn btn-primary me-2">Gönder</button>
				<button type="reset" class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>

