@model EntityLayer.Concrete.About
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hakkımızda Sayfası Düzenleme Paneli</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" asp-for="AboutID" />
				<div class="form-group">
					<label for="exampleInputName1">Başlık</label>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">İçerik</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Content"></textarea>
				</div>
				<button type="submit" class="btn btn-primary me-2">Güncelle</button>
				<button class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>

