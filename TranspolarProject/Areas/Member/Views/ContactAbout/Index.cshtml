@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">İletişim Bilgi Sayfası Düzenleme Paneli</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" asp-for="ContactID" />
				<div class="form-group">
					<label for="exampleInputName1">Telefon</label>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Phone">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Mail</label>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Mail">
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Açıklama</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Descripiton"></textarea>
				</div>
				<button type="submit" class="btn btn-primary me-2" style="color:white">Güncelle</button>
				<button class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>

