@model EntityLayer.Concrete.ContactMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">İletişim Mesajı Detay Sayfası</h4>
			<form  class="forms-sample">
				<input type="hidden" asp-for="MessageID" />
				<div class="form-group">
					<label for="exampleInputUsername1">İsim</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ContactName" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Mail</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ContactMail" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Telefon Numarası</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ContactPhone" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Konu</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ContactSubject" readonly>
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Mesaj</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="ContactContent" readonly></textarea>
				</div>
			</form>
		</div>
	</div>
</div>

