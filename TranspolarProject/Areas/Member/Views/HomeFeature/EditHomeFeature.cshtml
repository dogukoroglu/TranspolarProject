@model EntityLayer.Concrete.HomeFeature

@{
	ViewData["Title"] = "EditHomeFeature";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Anasayfa Alt Hizmet Düzenleme Paneli</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" asp-for="HomeFeatureID" />
				<div class="form-group">
					<label for="exampleInputName1">Başlık</label>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Görsel</label>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="ImageUrl">
				</div>
				<button type="submit" class="btn btn-primary me-2">Güncelle</button>
				<button class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>

