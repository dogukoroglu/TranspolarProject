@using EntityLayer.Concrete
@model List<HomeFeature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Home Feature Listesi</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Görsel</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.HomeFeatureID</td>
								<td>@item.Title</td>
								<td>@item.ImageUrl</td>
								<td><a href="/Member/HomeFeature/DeleteHomeFeature/@item.HomeFeatureID" class="btn btn-danger" style="color:white">Sil</a></td>
								<td><a href="/Member/HomeFeature/EditHomeFeature/@item.HomeFeatureID" class="btn btn-success" style="color:white">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

