@using EntityLayer.Concrete
@model List<SupportMessage>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gelen Kutusu</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Gönderen</th>
							<th>Konu</th>
							<th>Destek Talebi</th>
							<th>Tarih</th>
							<th>Durum</th>
							<th>Okundu Yap</th>
							<th>Mesaj Detayları</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.MessageID</td>
								<td>@item.SenderName</td>
								<td>@item.Subject</td>
								<td>@item.MessageContent</td>
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
								@if (item.Status == true)
								{
									<td>Okundu</td>
								}
								else
								{
									<td>Okunmadı</td>
								}
								@if (item.Status == false)
								{
									<td><a href="/Member/Message/ChangeStatus/@item.MessageID" class="btn btn-primary" style="color:white">Okundu Yap</a></td>
								}
								else
								{
									<td><a href="/Member/Message/ChangeStatus/@item.MessageID" class="btn btn-warning" style="color:white">Okunmadı Yap</a></td>
								}
								<td><a href="/Member/Message/SenderMessageDetails/@item.MessageID" class="btn btn-success" style="color:white">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

