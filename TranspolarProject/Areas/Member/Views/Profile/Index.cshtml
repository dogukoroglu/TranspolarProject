@model TranspolarProject.Areas.Member.Models.UserEditViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Profil Bilgileri</h4>
			<form method="post" class="forms-sample">
				<div class="form-group">
					<label for="exampleInputUsername1">Ad</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Name">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Soyad</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Surname">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">E-Mail</label>
					<input type="email" class="form-control" id="exampleInputUsername1" asp-for="Email">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Telefon</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Phonenumber">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Cinsiyet</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Gender">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Profil Fotoğrafı</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ImageUrl">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Şifre</label>
					<input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Şifre Tekrar</label>
					<input type="password" class="form-control" id="exampleInputConfirmPassword1" asp-for="ConfirmPassword">
				</div>
				<button type="submit" class="btn btn-primary me-2">Güncelle</button>
				<button type="reset" class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>
