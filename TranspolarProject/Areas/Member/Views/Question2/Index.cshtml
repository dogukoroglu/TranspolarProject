@using EntityLayer.Concrete
@model List<Question2>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Sık Sorulan Sorular Listesi</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Sil</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Question2ID</td>
								<td>@item.Title</td>
								<td><a href="/Member/Question2/DeleteQuestion/@item.Question2ID" class="btn btn-danger" style="color:white">Sil</a></td>
								<td><a href="/Member/Question2/EditQuestion/@item.Question2ID" class="btn btn-success" style="color:white">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

