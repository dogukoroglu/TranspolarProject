@model UpdateRoleViewModel

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Rol Düzenleme Sayfası</h4>
			<form method="post" class="forms-sample">
				<input type="hidden" asp-for="RoleID" />
				<div class="form-group">
					<label for="exampleInputUsername1">Rol Adı</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="RoleName">
				</div>
				<button type="submit" class="btn btn-primary me-2" style="color:white">Güncelle</button>
				<button type="reset" class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>

