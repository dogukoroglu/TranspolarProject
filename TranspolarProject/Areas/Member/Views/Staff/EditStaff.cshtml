@model EntityLayer.Concrete.Staff

@{
    ViewData["Title"] = "EditStaff";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Personel Ekleme Sayfası</h4>
			<form method="post" class="forms-sample">
				<input type="hidden" asp-for="StaffID" />
				<div class="form-group">
					<label for="exampleInputUsername1">Ad-Soyad</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Name">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Görev</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Position">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Sosyal Medya-1</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="SocialMedia1">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Sosyal Medya-2</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="SocialMedia2">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Sosyal Medya-3</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="SocialMedia3">
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Profil Fotoğrafı</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ImageUrl">
				</div>
				<button type="submit" class="btn btn-primary me-2">Güncelle</button>
				<button type="reset" class="btn btn-light">İptal Et</button>
			</form>
		</div>
	</div>
</div>


