@using EntityLayer.Concrete
@model List<Staff>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Çalışanlar</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Görsel</th>
							<th>Ad-Soyad</th>
							<th>Görev</th>
							<th>Durum</th>
							<th>İşlemler</th>
							<th></th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.StaffID</td>
								<td class="py-1">
									<img src="@item.ImageUrl" alt="image" />
								</td>
								<td>@item.Name</td>
								@*<td>
							<div class="progress">
							<div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							</td>*@
								<td>@item.Position</td>
								@if (item.Status != true)
								{
									<td>İzinde</td>
								}
								else
								{
									<td>Çalışıyor</td>
								}
								<td><a href="/Member/Staff/StatusChangeFalse/@item.StaffID" class="btn btn-warning" style="color:white">İzinli Yap</a></td>
								<td><a href="/Member/Staff/StatusChangeTrue/@item.StaffID" class="btn btn-primary" style="color:white">Çalışıyor Yap</a></td>
								<td><a href="/Member/Staff/DeleteStaff/@item.StaffID" class="btn btn-danger" style="color:white">Sil</a></td>
								<td><a href="/Member/Staff/EditStaff/@item.StaffID" class="btn btn-success" style="color:white">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />
				<a href="/Member/Staff/AddStaff/" class="btn btn-dark" style="color:white">Yeni Personel Ekle</a>
			</div>
		</div>
	</div>
</div>

