@using EntityLayer.Concrete
@model List<ServiceRequest>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_SupportLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gelen Hizmet Talepleri</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Müşteri Ad-Soyad</th>
							<th>Müşteri Mail</th>
							<th>Müşteri Telefon</th>
							<th>Hizmet</th>
							<th>Tarih</th>
							<th>Durum</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ServiceRequestID</td>
								<td>@item.AppUser.Name @item.AppUser.Surname</td>
								<td>@item.AppUser.Email</td>
								<td>@item.AppUser.PhoneNumber</td>
								<td>@item.RequestService</td>
								<td>@(((DateTime)item.RequestDate).ToString("dd-MMM-yyyy"))</td>
								<td>@item.Status</td>
								<td><a class="btn btn-success" href="/Support/ServiceRequest/RequestDetails/@item.ServiceRequestID">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


