@using EntityLayer.Concrete
@model List<Vehicle>

<div class="col-md-12 stretch-card">
	<div class="card">
		<div class="card-body">
			<p class="card-title">Yolda Olan Araçlar</p>
			<div class="table-responsive">
				<table id="recent-purchases-listing" class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Plaka</th>
							<th>Marka</th>
							<th>Model</th>
							<th>Durum</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Count > 0)
						{
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.VehicleID</td>
									<td>@item.VehiclePlate</td>
									<td>@item.VehicleBrand</td>
									<td>@item.VehicleModel</td>
									<td>@item.VehicleStatus</td>
								</tr>
							}
						}
						else
						{
							<div><h2>Yolda Araç Bulunmamaktadır</h2></div>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>