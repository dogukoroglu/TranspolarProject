@model EntityLayer.Concrete.SupportMessage

@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_SupportLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Mesaj Detayları</h4>
			<form method="post" class="forms-sample">
				<input type="hidden" asp-for="MessageID" />
				<div class="form-group">
					<label for="exampleInputUsername1">Alıcı Ad-Soyad</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="ReceiverName" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Alıcı Mail</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Receiver" readonly>
				</div>
				<div class="form-group">
					<label for="exampleInputUsername1">Destek Talebi Konusu</label>
					<input type="text" class="form-control" id="exampleInputUsername1" asp-for="Subject" readonly>
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Açıklama</label>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="MessageContent" readonly></textarea>
				</div>
			</form>
		</div>
	</div>
</div>

