<!doctype html>
<html lang="en">
<body>
	<!--/inner-page-->
	<div class="inner-banner py-5">
		<section class="w3l-breadcrumb text-left py-sm-5 ">
			<div class="container">
				<div class="w3breadcrumb-gids">
					<div class="w3breadcrumb-left text-left">
						<h2 class="inner-w3-title mt-lg-5 mt-4">
							Hakkımızda
						</h2>
					</div>
					<div class="w3breadcrumb-right">
						<ul class="breadcrumbs-custom-path">
							<li><a href="/Default/Index/">Anasayfa</a></li>
							<li class="active"><span class="fas fa-angle-double-right mx-2"></span> Hakkımızda</li>
						</ul>
					</div>
				</div>

			</div>
		</section>
	</div>
	<!--//inner-page-->
	<!--/about-page-->
	<section class="w3l-ab-page py-5" id="about1">
		<div class="container py-lg-5 py-md-4 py-2">
			<div class="row align-items-center">
				<div class="col-lg-6 pe-lg-5">

					@await Component.InvokeAsync("_MainAboutPartial")

					@await Component.InvokeAsync("_MainSubAbout")

				</div>
				<div class="col-lg-5 offset-lg-1 text-end mt-lg-0 mt-5 position-relative">
					<img src="~/transpolar/assets/images/ab.jpg" alt="" class="img-fluid radius-image">
					<div class="imginfo__box">
						<h6 class="imginfo__title">5+</h6>
						<p>Yıllık Deneyim</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--//about-page-->
	<!--/w3-grids-->
	@await Component.InvokeAsync("_AboutStatisticPartial")
	<!--//w3-grids-->
	<!--/w3l-join-main-->
	<section class="w3l-join-main py-5">
		<div class="container py-md-5">
			<div class="w3l-project-in">
				<div class="row bottom-info text-left">
					<div class="col-lg-7 w3l-project-in-left pe-lg-5">
						<h6 class="title-subw3hny mb-2">ÜCRETSİZ TAHMİN EDİN</h6>
						<h3 class="title-w3l two mb-2">
							Dünyadaki Herhangi Bir Varış Noktasına Açılan Kapınız.
						</h3>


					</div>
					<div class="col-lg-5 w3l-project-in-right">
						<div class="w3banner-content-btns">
							,
							<a href="contact.html" class="btn btn-style btn-primary mt-4 ms-3">Bize Ulaşın</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--//w3l-join-main-->
	<!--/team-sec-->
	@await Component.InvokeAsync("_AboutTeamPartial")
	<!--//team-sec-->
	<!--/faq-section-->
	<div class="w3l-faq-block py-5" id="faq">
		<div class="container content-gd py-lg-5">
			<div class="row mt-3">
				@await Component.InvokeAsync("_AboutQuestion")
				@await Component.InvokeAsync("_AboutQuestion2")

			</div>
		</div>
	</div>
	<!-- //faq-section -->

</body>

</html>


