@using EntityLayer.Concrete
@model List<FeaturedService>

<section class="w3l-witemshny-main py-5">
	<div class="container py-md-4">
		<!--/row-1-->
		<div class="witemshny-grids row">
			@foreach (var item in Model)
			{
			<div class="col-md-3 col-6 product-incfhny mt-4">
				<div class="weitemshny-grid oposition-relative">
					<a href="#img" class="d-block zoom"><img src="@item.FeaturedImage" alt="" class="img-fluid news-image"></a>
					<div class="witemshny-inf">
					</div>
				</div>
				<h4 class="gdnhy-1 mt-lg-4 mt-3">
					<a href="#img">@item.FeaturedTitle</a>
				</h4>
				<p class="mt-md-2">@item.FeaturedDescription</p>
			</div>
			}
		</div>
		<!--//row-1-->
		<div class="w3l-md-btn mx-auto text-center mt-md-5 mt-4">
			<a href="/Service/Index/" class="btn btn-style btn-primary mt-4">Bütün Hizmetlerimiz...</a>
		</div>
	</div>
</section>