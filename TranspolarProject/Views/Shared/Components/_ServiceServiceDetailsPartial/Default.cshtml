@using EntityLayer.Concrete
@model List<Service>

<section class="w3l-features py-5" id="work">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="title-content text-center mb-lg-3 mb-4">
            <h6 class="title-subw3hny mb-1">Hizmetlerimiz</h6>
            <h3 class="title-w3l">Ne sunuyoruz ?</h3>
        </div>
        <div class="main-cont-wthree-2">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap">
                        <div class="icon">
                            <i class="@item.ServiceIcon"></i>
                        </div>
                        <h4><a href="#service" class="title-head">@item.ServiceTitle</a></h4>
                        <p class="text-para">@item.ServiceDescription </p>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>

